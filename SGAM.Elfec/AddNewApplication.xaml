<UserControl x:Class="SGAM.Elfec.AddNewApplication"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Res="clr-namespace:SGAM.Elfec.Properties"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" 
             xmlns:converters="clr-namespace:SGAM.Elfec.Converters"
             xmlns:local="clr-namespace:SGAM.Elfec"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="350" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.Buttons.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" >
            <Button Name="BtnBack" Style="{DynamicResource MetroCircleButtonStyle}" Width="42" Height="42" Margin="10,10" Click="BtnBack_Click" >
                <Button.Content>
                    <Viewbox Height="18" Child="{StaticResource Back}"  />
                </Button.Content>
            </Button>
            <Viewbox Height="32" Margin="20,0,10,5" Child="{StaticResource AddApp}" RenderOptions.EdgeMode="Aliased" />
            <Label Content="{x:Static Res:Resources.LblAddNewApp}" FontSize="26" VerticalContentAlignment="Center"
                   FontFamily="Segoe UI Light" Padding="0,0,0,2"/>
        </StackPanel>
        <ScrollViewer Margin="20,0,0,0" Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" CanContentScroll="True">
            <Grid Name="AuthPanel" Margin="0,0,0,40" VerticalAlignment="Top" HorizontalAlignment="Left" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="235" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <Image Width="96" Height="96" Source="{Binding NewApplication.IconUrl}" ToolTip="{x:Static Res:Resources.TooltipApplicationIcon}" />
                <Label Grid.Column="1" VerticalContentAlignment="Top" Margin="0,0,0,10" Content="{x:Static Res:Resources.LblApplicationApkFilename}" />
                <TextBox Name="TxtApkFilename" Grid.Column="1" IsReadOnly="True" Margin="0,0,0,10" />
                <Button Name="BtnBrowseApk" Grid.Column="2" Content="Subir" HorizontalAlignment="Left" Margin="10,0,0,10" Height="32" Width="96" Click="BtnBrowseApk_Click" />
                
                <Label Grid.Row="1" VerticalContentAlignment="Center" Margin="0,0,0,10" Content="{x:Static Res:Resources.LblApplicationName}" />
                <TextBox IsReadOnly="True" Name="TxtName" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" Text="{Binding NewApplication.Name}" MaxLength="255" />

                <Label VerticalContentAlignment="Center" Margin="0,0,0,10" Grid.Row="2" Content="{x:Static Res:Resources.LblApplicationPackage}"  />
                <TextBox Grid.Row="2" IsReadOnly="True" Grid.Column="1" Text="{Binding NewApplication.Package}"  Margin="0,0,0,10" />
                
                <Label VerticalContentAlignment="Center" Margin="0,0,0,10" Grid.Row="3" Content="{x:Static Res:Resources.LblApplicationVersion}"  />
                <TextBox Grid.Row="3" IsReadOnly="True" Grid.Column="1" Text="{Binding NewApplication.LatestVersion}" Margin="0,0,0,10" />
                
                <Button Grid.Row="20" Name="BtnAddApp" IsDefault="True" Command="{Binding AuthorizeDeviceCommand}"
                        Padding="12,12" FontSize="14"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                        FontWeight="SemiBold" HorizontalAlignment="Left" Click="BtnAddApp_Click"  >
                    <Button.Content>
                        <StackPanel Orientation="Vertical">
                            <Viewbox Height="30" Child="{StaticResource AuthDevice}" />
                            <TextBlock Foreground="{StaticResource AlmostBlackTextBrush}" Margin="0,8,0,0" TextWrapping="Wrap"
                                       Text="{x:Static Res:Resources.BtnAuthorize}"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Controls:TransitioningContentControl  Grid.Row="20" Grid.Column="1"
                                                       Name="Transitioning" VerticalContentAlignment="Center" Transition="Left" />
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>

