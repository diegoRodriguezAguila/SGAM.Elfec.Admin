<Fluent:RibbonWindow x:Class="SGAM.Elfec.Services.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGAM.Elfec"
        xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Icon="pack://application:,,,/Resources/MainIcon.ico" ResizeMode="CanResize"
        SnapsToDevicePixels="True" MinWidth="100" Width="400" Height="300"
                     MinHeight="100"
        Title="{Binding ElementName=DialogContent, Path=Child.Tag, FallbackValue='SGAM Elfec'}" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Fluent:Ribbon Grid.Row="0" Height="26" IsQuickAccessToolBarVisible="False" IsMinimized="True" />
        <Border Grid.Row="1" Name="DialogContent" />
    </Grid>
</Fluent:RibbonWindow>
